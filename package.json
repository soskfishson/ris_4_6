{
  "name": "distributed-information-system",
  "version": "1.0.0",
  "description": "Distributed Information System for Exchange of Telemetry Data",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start:central": "cross-env SERVICE_TYPE=central ts-node src/index.ts",
    "start:territorial1": "cross-env SERVICE_TYPE=territorial1 ts-node src/index.ts",
    "start:territorial2": "cross-env SERVICE_TYPE=territorial2 ts-node src/index.ts",
    "dev:central": "cross-env SERVICE_TYPE=central nodemon --exec ts-node src/index.ts",
    "dev:territorial1": "cross-env SERVICE_TYPE=territorial1 nodemon --exec ts-node src/index.ts",
    "dev:territorial2": "cross-env SERVICE_TYPE=territorial2 nodemon --exec ts-node src/index.ts",
    "create-db": "ts-node scripts/createDatabases.ts",
    "seed-db": "ts-node scripts/seedDatabases.ts",
    "lint": "eslint . --ext .ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "distributed",
    "information",
    "system",
    "telemetry",
    "replication"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.16",
    "@types/pg": "^8.11.11",
    "@types/uuid": "^10.0.0",
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "express-winston": "^4.2.0",
    "nodemon": "^3.1.9",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.21",
    "typescript": "^5.8.2",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
